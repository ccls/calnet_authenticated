<h4>Users:</h4>
<% unless @users.empty? %>
<table id='users'><tbody>
<% @users.each do |user| %>
<tr class='user row'>
<td class='username'>
<%= link_to user.displayname, user_path(user) -%>
</td>
<td class='manage'>
<%= destroy_link_to( 'Destroy', user_path(user) ) %>
</td>
</tr>
<% end %>
</tbody></table><!-- id='users' -->
<% else %>
Sorry, no users yet.
<% end %>
